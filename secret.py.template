
def pass_secret_variables():
    """
    Pass secret variables to the application.
    This function is used to pass the secret variables to the application.
    """
    AZURE_OPENAI_ENDPOINT = "https://*.cognitiveservices.azure.com/"
    AZURE_OPENAI_API_KEY = "*"
    TELEGRAM_BOT_USERNAME = "*"
    TELEGRAM_BOT_KEY = "*:*"

    ARK_ENDPOINT = "https://ark.cn-beijing.volces.com/api/v3/chat/completions"
    ARK_API_KEY = "*"

    return (
        AZURE_OPENAI_ENDPOINT,
        AZURE_OPENAI_API_KEY,
        TELEGRAM_BOT_USERNAME,
        TELEGRAM_BOT_KEY,
        ARK_ENDPOINT,
        ARK_API_KEY,
    )


def set_environment():
    """Set environment variables for the application."""
    import os

    (
        AZURE_OPENAI_ENDPOINT,
        AZURE_OPENAI_API_KEY,
        TELEGRAM_BOT_USERNAME,
        TELEGRAM_BOT_KEY,
        ARK_ENDPOINT,
        ARK_API_KEY,
    ) = pass_secret_variables()

    os.environ["AZURE_OPENAI_ENDPOINT"] = AZURE_OPENAI_ENDPOINT
    os.environ["AZURE_OPENAI_API_KEY"] = AZURE_OPENAI_API_KEY
    os.environ["TELEGRAM_BOT_USERNAME"] = TELEGRAM_BOT_USERNAME
    os.environ["TELEGRAM_BOT_KEY"] = TELEGRAM_BOT_KEY

    # Ark
    os.environ["ARK_ENDPOINT"] = ARK_ENDPOINT
    os.environ["ARK_API_ENDPOINT"] = ARK_ENDPOINT
    os.environ["ARK_API_KEY"] = ARK_API_KEY

    # Optional: set a default model if you use Ark
    os.environ.setdefault("ARK_MODEL", "")

    # Ollama (local/private endpoint)
    os.environ.setdefault("OLLAMA_ENDPOINT", "http://100.69.97.8:11434")
    os.environ.setdefault("OLLAMA_MODEL", "gpt-oss:20b")

